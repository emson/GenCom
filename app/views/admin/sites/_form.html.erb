<%= form_for([:admin, @site]) do |f| %>
  <% if @site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class='unit size2of3'>
  <div class='mod bigPic complex flow'>
    <b class='top'>
      <b class='tl'></b>
      <b class='tr'></b>
    </b>
    <div class='inner'>
      <div class='hd section'>
        <p>
          <div class="field">
            <%= f.label :title %>: 
            <%= f.text_field :title %>
          </div>
        </p>
      </div>
      <div class='bd'>
      <p>
        <div class="field">
          <%= f.label :domain %>: 
          <%= f.text_field :domain %>
        </div>
      </p>
      <p>
        <div class="field">
          <%= f.label :notes %>:
          <%= f.text_area :notes %>
        </div>
      </p>
      </div>
      <div class='ft'>
        <p>
          <div class="actions">
            <%= f.submit %>
          </div><br/>
          <hr/>
            <%= render :partial => 'shared/add_image', :locals=>{ :image => Image.new } %>

            <%= link_to 'Show', [:admin, @site] %> |
            <%= link_to 'Back', admin_sites_path %>
        </p>
      </div>
    </div>
    <b class='bottom'>
      <b class='bl'></b>
      <b class='br'></b>
    </b>
  </div>
</div>

<% end %>

<div class='clear'></div>