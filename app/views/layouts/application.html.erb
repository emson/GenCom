<!DOCTYPE html>
<html>
<head>
  <title><%= @site.title %></title>
  <%= stylesheet_link_tag "styles-base", :media => "all" %>
  <%= stylesheet_link_tag @site.css, :media => "all" %>
	<script src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js' type='text/javascript'></script>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class='padTop20'>
    <div class='page pagebg'>
    
      <div class='header'>
        <%= raw @site.header_snippet.markdown %>
      </div>
    
      <div class='content'>
        <%= yield %>
      </div>
    
      <div class='footer'>
        <%= raw @site.footer_snippet.markdown %>
      </div>
    
    </div>
  </div>
</body>
</html>
